{
  "name": "notes-backend",
  "version": "1.0.0",
  "description": "Backend for a Simple Phonebook Web-App.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "build:ui": "@powershell Remove-Item -Recurse -Force build && cd ../notes && npm run build && @powershell Copy-Item build -Recurse ../notes-backend",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push",
    "lint": "eslint .",
    "test": "cross-env  NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "Junaid Ansari",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "mongoose": "^7.2.4",
    "mongoose-unique-validator": "^4.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./test/teardown.js"
  }
}
